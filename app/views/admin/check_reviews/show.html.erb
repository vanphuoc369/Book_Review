<div class="main-content-inner">
  <div class="page-content">
    <div class="page-header" style="margin-top: 0px;">
      <h4>
        Kiểm duyệt bài đánh giá
      </h4>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="row content">
          <div class="panel panel-default">
            <div class="panel-body">
              <% unless @review.nil? %>
                <span style="color: blue;">Nội dung:   </span><%= @review.content.html_safe %>
                <span style="color: blue;">Đánh giá sao:   </span><%= load_star_rating(@review.rate) %>
              <% else %>
                <p class="notify">Không có dữ liệu</p>
              <% end %>
            </div>
          </div>
          <hr>
          <%= link_to admin_review_path(@review.id), method: :patch do %>
            <button type="button" class="btn btn-info">Cho phép đăng bài</button>
          <% end %>
          <%= link_to admin_check_review_path(@review.id), method: :delete,
            data: {confirm: "Bạn có muốn hủy bài đánh giá này không?"} do %>
            <button type="button" class="btn">Hủy bài</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
